<%# This file contains override for download link - allow to collect download usage %>
<div class="no-preview">
  <%= t('hyrax.works.show.no_preview') %>
  <% if Hyrax.config.display_media_download_link? %>
    <p /><%= link_to t('hyrax.file_set.show.download'),
                  hyrax.download_path(file_set),
                  target: :_new,
                  id: "file_download",
                  class: 'file_download_usage',
                  data: { label: file_set.id, work_id: file_set.parent.id, user_id: current_user ? current_user.id : nil } %>
  <% end %>
</div>
